{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "artifact-diff.v1.json",
  "title": "ArtifactDiffV1",
  "type": "object",
  "required": [
    "schema_version",
    "artifact_type",
    "base_revision",
    "head_revision",
    "sections"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "artifact-diff@1"
    },
    "artifact_type": {
      "type": "string"
    },
    "base_revision": {
      "type": "integer"
    },
    "head_revision": {
      "type": "integer"
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/sectionDiff"
      }
    }
  },
  "definitions": {
    "sectionDiff": {
      "type": "object",
      "required": ["section_key", "ops"],
      "properties": {
        "section_key": {
          "type": "string"
        },
        "ops": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/diffOp"
          }
        }
      }
    },
    "diffOp": {
      "type": "object",
      "required": ["op", "path"],
      "properties": {
        "op": {
          "type": "string",
          "enum": ["add", "remove", "replace"]
        },
        "path": {
          "type": "string"
        },
        "before": {},
        "after": {}
      }
    }
  }
}
